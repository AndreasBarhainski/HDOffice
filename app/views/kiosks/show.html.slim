- title t(".kiosk")
.container
  = form_with url: kiosk_path do |f|
    = card :who_are_you
      .grid
        - @users.each do |user|
          label.user for=user.id
            = f.radio_button :user_id, user.id, id: user.id, required: true
            = avatar user, size: :small
            div = user.name
            small = user.team.name
    = card :kiosk
      .grid
        - @products.each do |product|
          label.product
            .product__price = number_to_currency product.price
            .product__image = avatar product
            .product__name = product.name
            = f.button t(".buy"), value: product.id, class: "button product__button"
